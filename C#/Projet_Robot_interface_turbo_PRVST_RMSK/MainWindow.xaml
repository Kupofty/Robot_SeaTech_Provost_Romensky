<Window x:Class="Projet_Robot_interface_turbo_PRVST_RMSK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_Robot_interface_turbo_PRVST_RMSK"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Emission" Margin="0" Background="#FFDDDDDD" BorderBrush="Black" Grid.Column="1" Grid.Row="1">
            <TextBox x:Name="TextBoxEmission" Margin="0" TextWrapping="Wrap" TextChanged="TextBox_TextChanged" Background="{x:Null}" BorderBrush="{x:Null}" AcceptsReturn="True" KeyUp="TextBoxEmission_KeyUp"/>
        </GroupBox>
        <GroupBox x:Name="GroupReception" Header="Reception" Margin="0" Background="#FFDDDDDD" BorderBrush="Black" Grid.Column="3" Grid.Row="1">
            <TextBox x:Name="TextBoxReception" Margin="0" TextWrapping="Wrap" TextChanged="TextBox_TextChanged_1" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False"/>
        </GroupBox>
        <Button x:Name="buttonEnvoyer" Content="Envoyer" Grid.Column="1" HorizontalAlignment="Center" Margin="126,0" Grid.Row="3" Width="100" Click="buttonEnvoyer_Click" RenderTransformOrigin="-0.41,0.8"/>
        <Button x:Name="buttonClear" Content="Nettoyer" Grid.Column="3" HorizontalAlignment="Center" Margin="133,0,119,0" Grid.Row="3" Width="100" Click="buttonClear_Click" RenderTransformOrigin="-0.41,0.8"/>
        <Button x:Name="buttonTest" Content="Test" Grid.Column="1" HorizontalAlignment="Center" Margin="315,0,319,0" Grid.Row="3" Width="100" Click="buttonTest_Click" RenderTransformOrigin="-0.41,0.8" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
